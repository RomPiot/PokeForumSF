<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
		<link rel="stylesheet" href=" {{ asset('css/style.min.css') }}"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			{% block body %}

				{% block nav %}
					<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
						<div class="container">
							<a class="navbar-brand" href="{{ path('home') }}">PokéForumSF</a>
							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
								<span class="navbar-toggler-icon"></span>
							</button>

							<div class="collapse navbar-collapse" id="navbarColor02">
								<ul class="navbar-nav mr-auto">
									<li class="nav-item active">
										<a class="nav-link" href="{{ path('home') }}">Accueil
											<span class="sr-only">(current)</span>
										</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('category_list') }}">Catégories</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('home') }}">Page</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('home') }}">Page</a>
									</li>
								</ul>

								{% if is_granted('ROLE_USER') %}
									<div class="btn-group">
										<button type="button" class="profile-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
											{% if app.user.gender == 'man' %}
												<img src="https://randomuser.me/api/portraits/men/{{ random(1, 99) }}.jpg" alt=""/>
											{% else %}
												<img src="https://randomuser.me/api/portraits/women/{{ random(1, 99) }}.jpg" alt=""/>
											{% endif %}
										</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a href=" {{ path('user_profile_show', {id: app.user.id}) }}" class="dropdown-item">Mon Profil</a>
											<div class="dropdown-divider"></div>
											<a href=" {{ path('app_logout') }}" class="dropdown-item">Déconnexion</a>
										</div>
									</div>
								{% else %}
									<div class="btn-group">
										<a href=" {{ path('app_login') }}" class="btn btn-primary">Connexion</a>
									</div>
								{% endif %}
							</div>
						</div>
					</nav>
				{% endblock %}

				<div class="container">
					{% block content %}{% endblock %}
				</div>
			
			{% endblock %}
			<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js
																"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
			{% block javascripts %}{% endblock %}
		</body>
	</html>
