{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}

    <link rel="stylesheet" href=" {{ asset('css/styleCategoryList.css') }}">



    <div id="pokemonLogoContainer">

        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/International_Pok%C3%A9mon_logo.svg/1024px-International_Pok%C3%A9mon_logo.svg.png" alt="">

    </div>
    {% for category in categorys %}

    <div id="wrapperCategory">



        <a href="{{ path('category',{id: category.id}) }}">

        <div class="categoryContainer">
            <h3>{{ category.name }}</h3>
            <img class="iconCatgory" src="{{ category.icon }}" alt="{{ category.name }}">
        </div>
        </a>

        <div id="wrapperSubCategorie">
            <h2>Sous-cat√©gories</h2>


            {% for subCategory in subCategorys %}
                {% if loop.parent.loop.index == subCategory.category.id  %}


                    <div class="SubCategorieContainer">
                        <h3>{{ subCategory.name }}</h3>
                    </div>

                {% endif%}

            {% endfor %}


        </div>


    </div>
    {% endfor %}


{% endblock %}
